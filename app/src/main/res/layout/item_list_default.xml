<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="3dp"

    >
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_margin="1dp">
                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/textItemList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="?android:attr/listPreferredItemHeightSmall"
                    android:singleLine="true"
                    android:text="Wagner Jeronimo"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/titulo_color"/>
                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/textSubItemList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="?android:attr/listPreferredItemHeightSmall"
                    android:text="Psiquiatra"
                    android:textSize="15dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="-15dp"
                    android:textColor="@color/subTitulo_color"/>

                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/textSub2ItemList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="?android:attr/listPreferredItemHeightSmall"
                    android:text="Psiquiatra"
                    android:textSize="15dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="-15dp"
                    android:textColor="@color/subTitulo_color" android:visibility="gone"/>
        </LinearLayout>
</android.support.v7.widget.CardView>