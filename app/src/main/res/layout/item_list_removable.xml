<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="3dp"

    >
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_margin="1dp">
                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp">
                        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/textItemList"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:minHeight="?android:attr/listPreferredItemHeightSmall"
                            android:text="Wagner Jeronimo fsdjkl jlsda jklfsdjkl jklasdfjklasdfjkl fsdjkal"
                            android:singleLine="true"
                            android:layout_marginRight="55dp"
                            android:textSize="13dp"
                            android:layout_weight="2"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/titulo_color"/>
                        <ImageView
                            android:id="@+id/imgRemoveItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_cancel"/>
                </RelativeLayout>
                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/textSubItemList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="?android:attr/listPreferredItemHeightSmall"
                    android:text="Psiquiatra"
                    android:textSize="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="-35dp"
                    android:textColor="@color/subTitulo_color"/>
        </LinearLayout>
</android.support.v7.widget.CardView>